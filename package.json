{
  "name": "rails-pr-digest",
  "version": "1.0.0",
  "description": "Daily digest of Ruby on Rails merged PRs with AI summaries",
  "type": "module",
  "scripts": {
    "collect": "tsx scripts/main.ts",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "dotenv": "^17.2.3",
    "openai": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^20.0.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  }
}
